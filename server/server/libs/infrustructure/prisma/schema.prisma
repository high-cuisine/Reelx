// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  username  String 
  telegramId String? @unique
  photoUrl   String?

  tonBalance  Float    @default(0)
  starsBalance Float   @default(0)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  transactions Transaction[]
  gameMembers  GameMembers[]
  userGifts    UserGifts[]

  @@map("users")
}

model Transaction {
  id        String          @id @default(uuid())
  userId    String
  amount    Float
  type      TransactionType
  createdAt DateTime        @default(now())
  updatedAt DateTime        @updatedAt

  user      User            @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("transactions")
}

model Games {
  id              String        @id @default(uuid())
  type            GameType
  currency        GameCurrancy
  bet             Int
  playersMaxCount Int
  status          GameStatus    @default(OPEN)
  
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt
  
  members         GameMembers[]

  @@map("games")
}

model UserGifts {
  id              String   @id @default(uuid())
  userId          String
  giftName        String
  giftAddress     String
  collectionAddress String?
  image           String?
  price           Float?
  
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("user_gifts")
}

enum GameStatus {
  OPEN
  IN_GAME
  CLOSE
}

model GameMembers {
  id        String   @id @default(uuid())
  gameId    String
  userId    String
  status    GameMemberStatus @default(player)
  
  createdAt DateTime @default(now())
  
  game      Games    @relation(fields: [gameId], references: [id], onDelete: Cascade)
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@unique([gameId, userId])
  @@map("game_members")
}

enum GameMemberStatus {
  winner
  player
  loose
}

enum GameCurrancy {
  TON
  STARS
}

enum GameType {
  PUBLIC
  PRIVATE
}

enum TransactionType {
  stars
  ton
}